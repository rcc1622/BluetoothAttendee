<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csc_331_jagwares.bluetoothattendee.fragments.RegisterDevicesFragment">

    <Button
        android:id="@+id/registerDevicesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Register Devices" />

    <ListView
        android:id="@+id/lvStudentList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/registerDevicesBtn" />

</RelativeLayout>